# services external command
brew tap homebrew/services

# desc external command
brew tap telemachus/homebrew-desc

# wine
brew install wine --HEAD
brew install winetricks

# Development
brew install python --with-tcl-tk
brew install python@2 --with-tcl-tk
brew install nvm node
brew install mysql
brew install postgresql pgcli

# Vim
brew install vim neovim/neovim/neovim
brew install ctags
brew install tidy-html5
brew install shellcheck # for vim shell static check
brew install ievms

# Shells
brew install zsh zsh-completions
brew install bash
brew install bash-completion@2

# Completions
brew install rails-completion rake-completion bundler-completion gem-completion pip-completion \
             ruby-completion vagrant-completion tmuxinator-completion grunt-completion django-completion \
             packer-completion spring-completion brew-cask-completion open-completion \
             launchctl-completion fabric-completion \
             docker-compose-completion docker-machine-completion yarn-completion

# git
brew install git git-flow-avh hub diff-so-fancy git-sizer

# Tools
brew install wget coreutils md5sha1sum rename tree cheat stormssh osquery dos2unix prettyping googler pstree lsusb gawk telnet
brew install findutils grep gnu-sed gnu-tar --with-default-names
brew install htop --with-ncurses
brew install ncdu # NCurses Disk Usage
brew install archey # small command line utility to show the OSX spec
brew install awscli

# Command line enhancement
brew install antigen
brew install liquidprompt autojump the_platinum_searcher the_silver_searcher
#brew install tmux
brew install fzf # consider peco https://github.com/peco/peco

# Install shell extensions - this should be done whenever fzf is updated
$(brew info fzf | grep /install)

